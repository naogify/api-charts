  "license": "GPL-3.0 or later",
  "devDependencies": {
    "@wordpress/scripts": "6.0.0",
    "grunt": "^1.0.4",
    "grunt-wp-readme-to-markdown": "^2.0.1"
  },
  "dependencies": {
    "@wordpress/components": "^9.0.0"
  },
  "release-it": {
    "hooks": {
      "before:bump": "bash ./bin/create-release.sh ${version}"
    },
    "github": {
      "release": true
    },
    "npm": {
      "publish": false
    }
  }
